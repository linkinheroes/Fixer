<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExchangeRateListHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/exchange_rate_list_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/exchange_rate_list_title_padding</item>
        <item name="android:textSize">@dimen/exchange_rate_list_title_text_size</item>
    </style>

    <style name="ExchangeRateListDayHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/exchange_rate_list_day_header_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/exchange_rate_list_day_header_text_padding</item>
        <item name="android:textSize">@dimen/exchange_rate_list_day_header_text_size</item>
    </style>

    <style name="ExchangeRateListRowCurrencyText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/exchange_rate_list_day_row_text</item>
        <item name="android:textSize">@dimen/exchange_rate_list_day_row_text_size</item>
        <item name="android:layout_margin">@dimen/exchange_rate_list_day_row_text_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ExchangeRateListRowRateText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/exchange_rate_list_day_row_text</item>
        <item name="android:textSize">@dimen/exchange_rate_list_day_row_text_size</item>
        <item name="android:layout_margin">@dimen/exchange_rate_list_day_row_text_margin</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
